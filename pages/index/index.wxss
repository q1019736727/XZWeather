/**index.wxss**/

.container {
  position: relative;
}

.container .weatherTopWrapper {
  width: 100vw;
  height: 100vw;
  position: fixed;
  left: 0;
  top: 0;
  z-index: -1;
}

.container .weatherTopWrapper > image {
  width: 100%;
  height: 100%;
}

.container .weatherTopWrapper .location {
  position: absolute;
  font-size: 30rpx;
  width: 100%;
  top: 20rpx;
  text-align: center;
  color: white;
}

.container .weatherTopWrapper .location icon {
  margin-left: 10rpx;
  font-size: 30rpx;
}

.container .weatherTopWrapper .temperatureWrapper {
  position: absolute;
  top: 100rpx;
  left: 40rpx;
  color: white;
}

.container .weatherTopWrapper .temperatureWrapper text:nth-child(1) {
  font-size: 80rpx;
  font-weight: 500;
}

.container .weatherTopWrapper .temperatureWrapper text:nth-child(2) {
  font-size: 32rpx;
  margin-left: 10rpx;
}

.container .weatherTopWrapper .todayWeather {
  position: absolute;
  top: 200rpx;
  left: 40rpx;
  color: white;
  font-size: 28rpx;
}

.container .weatherTopWrapper .todayWeather icon {
  margin-left: 10rpx;
  margin-top: 40rpx;
  font-size: 70rpx;
}

/*下半部分*/

.container .bottomPage {
  width: 100%;
  margin-top: 80vw;
}

/*最近几小时温度部分*/

.container .nearTempCard {
  width: calc(100vw - 40px);
  background: white;
  margin: 0 auto;
  box-shadow: 1px 1px 6px #dfe0e1;
  border-radius: 6px;
}

.container .nearTempCard > text {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 70rpx;
  margin-left: 10px;
  color: #1a1a1a;
}

.container .nearTempCard #canvas {
  height: 110px;
  width: calc(100vw - 40px);
  background-color: #fff;
  margin-top: 20px;
  box-sizing: border-box;
}

.container .nearTempCard .bottomtemp {
  margin-left: 40px;
  margin-right: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .nearTempCard .bottomtemp label {
  font-size: 20rpx;
  line-height: 60rpx;
  font-weight: 400;
}

.container .nearTempCard .bottomtemp>label:first-child {
  margin-left: -22rpx;
}

.container .nearTempCard .bottomtemp>label:last-child {
  margin-right: -22rpx;
}

/*最近一周温度*/

.container .weekTemp {
  width: calc(100vw - 40px);
  background: white;
  margin: 15px auto;
  box-shadow: 1px 1px 6px #dfe0e1;
  border-radius: 6px;
}

.container .weekTemp .weekTemp-item {
  padding: 17px 0;
  border-bottom: 1px solid #ededed;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .weekTemp label {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 70rpx;
  margin-left: 15px;
  color: #1a1a1a;
}

.weekTemp-item .item-left text:nth-child(1) {
  font-size: 14px;
  font-weight: 500;
  margin-left: 15px;
}

.weekTemp-item .item-left text:nth-child(2) {
  font-size: 13px;
  font-weight: 400;
  margin-left: 20px;
  color: #777;
}

.weekTemp-item .item-left icon {
  margin-left: 30px;
  font-size: 26px;
  color: #72b2fe;
}

.weekTemp-item .item-right {
  font-size: 14px;
  font-weight: 400;
  margin-right: 10px;
  color: #555;
  margin-right: 10px;
}

.weekTemp-item icon {
  margin-left: 20px;
}
